<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeadingStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/heading_style_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="ActivityLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/category_style_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="LineBreakStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/line_break_height</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:background">@color/colorLightGray</item>
    </style>

    <style name="ChevronRightStyle">
        <item name="android:layout_width">@dimen/chevron_right_width</item>
        <item name="android:layout_height">@dimen/chevron_right_height</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:contentDescription">Chevron pointing right.</item>
        <item name="android:src">@drawable/ic_chevron_right_black_24dp</item>
    </style>

    <style name="CategoryWrapperStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="SongItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="ArtistItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="LibraryScrollStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CategoryContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ListParentLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_parent_layout_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ListItemLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="PlayIconStyle">
        <item name="android:layout_width">@dimen/plan_icon_width</item>
        <item name="android:layout_height">@dimen/play_icon_height</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:src">@drawable/ic_play_arrow_black_24dp</item>
    </style>

    <style name="ListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="GridViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:numColumns">2</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="AlbumImageStyle">
        <item name="android:layout_width">@dimen/album_image_width</item>
        <item name="android:layout_height">@dimen/album_image_height</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="GridParentLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="GridImageItemStyle">
        <item name="android:layout_width">@dimen/grid_image_width</item>
        <item name="android:layout_height">@dimen/grid_image_width</item>
    </style>

    <style name="GridTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="GenreParentLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="GenreItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="PlayParentLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="PlayAlbumStyle">
        <item name="android:layout_width">@dimen/play_image_width</item>
        <item name="android:layout_height">@dimen/play_image_height</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="PlaySongStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="PlayArtistStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="PlaySeekStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="PlayFrameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="PlayButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PlayContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
