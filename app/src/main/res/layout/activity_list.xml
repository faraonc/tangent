<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ActivityLayoutStyle"
    tools:context="edu.udacity.faraonc.tangent.ListActivity">

    <LinearLayout style="@style/HeadingContainerStyle">

        <Button
            android:id="@+id/list_home_button"
            style="@style/HomeButtonStyle" />

    <TextView
        android:id="@+id/list_view_heading"
        style="@style/HeadingStyle"
        tools:text="@string/song_heading" />

    </LinearLayout>

    <ListView
        android:id="@+id/list"
        style="@style/ListViewStyle" />

</LinearLayout>
